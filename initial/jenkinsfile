pipeline {
    agent any
    tools {	
        maven 'maven-3.6.2'
        jdk 'jdk1.8'
    }
    stages {
    
        stage ('clean ws') {
            steps {
                cleanWs()
            }
        }
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "MAVEN_HOME = ${MAVEN_HOME}"
                '''
            }
        }
            
       stage ('checkout') {
            steps {
               	git credentialsId: 'github', url: 'https://github.com/bharatkumarbhagat/gs-spring-boot.git'				
               
            }   
        }
        
        stage ('Build') {
            steps {
                sh 'mvn clean install -DskipTests' 
            }
        }

       
    }
}
